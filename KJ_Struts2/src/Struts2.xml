<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="order_update" extends="struts-default"
		namespace="/order">
		<global-allowed-methods>login</global-allowed-methods>
		<action name="order" class="com.lzh.Controller.OrderController"
			method="update">
			<result name="success">
				/order.jsp
			</result>
		</action>
		<action name="order_add" class="com.lzh.Controller.OrderController"
			method="add">
			<result name="success">
				/order.jsp
			</result>
		</action>		
	</package>
	<include file="Struts3.xml"></include>
</struts>